                <br><br><br>
                <div id="user-kertas" class="row">
                    <a href="#" onclick="userChoose('kertas')"><img src="../assets/kertas.png" id="resultkertas" class="kika3" width="50px" height="50px"></a>
                </div>
            </div>
            
            <div class="col">
                <div id="win-display" class="row"></div>
            </div>
            <div id="versus">
                <p class="vs">VS</p>
            </div>
            
