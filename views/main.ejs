<body>
    <div class="container2">

        <div class="row">
          <nav>
            <div>
                <a>   
                    <p class="toptext"><span>?</span><img src="../assets/logo_1.png" width="25px" height="25px">Rock Paper Scissors</p>
                </a>
            </div>
           </nav>
        </div>

        <div class="row">
            <div class="col">
                <div class="row">
                    <p class="player"><b>PLAYER 1</b></p>
